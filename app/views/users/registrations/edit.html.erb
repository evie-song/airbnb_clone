<div class="profile-page-container">

  <div class="mb-5">
    <h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-profile-form" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
      <div class="profile-image-wrapper">
        <div class="host-image-container">
            <%= image_tag current_user.avatar, :alt => "host icon", :class => "host-icon" %>
        </div>
        <div class="">
            <%= f.file_field :avatar %>
          </div>
      </div>
      <div class="d-flex justify-content-between">
        <div class="field w-30">
          <%= f.label :first_name, class: "field-title" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>

        <div class="field w-30">
          <%= f.label :last_name, class: "field-title" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>

        <div class="field w-30">
          <%= f.label :display_name, class: "field-title" %><br />
          <%= f.text_field :display_name, autofocus: true %>
        </div>
      </div>
  
    <div class="field">
      <%= f.label :about, class: "field-title" %><br />
      <%= f.text_area :about, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email, class: "field-title" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :phone_number, class: "field-title" %><br />
      <%= f.telephone_field :phone_number, autofocus: true %>
    </div>

    <div class="d-none">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      
    </div>

    <div class="field">
      <%= f.label :current_password, class: "field-title" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class:"update-btn" %>
    </div>
  <% end %>

  <div class="d-none">

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>

  </div>
</div>