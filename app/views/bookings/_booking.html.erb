
<div class="d-flex booking-page-wrapper">
  <div class="booking-confirmation">
    <%= render partial: "booking_info_partial", locals: {booking: booking} %>
  </div>
  <div class="booking-map">
    <div id="map" class="booking-map mb-5" data-lat="<%= booking.listing.address.latitude %>" data-lon="<%= booking.listing.address.longitude %>" data-marker="<%= image_path("black_circle_marker.svg")%>" data-daterange="
      <% if booking.start_date.month == booking.end_date.month %>
        <%= booking.start_date.strftime('%b %-d') %> - <%= booking.end_date.strftime('%-d') %>, <%= booking.end_date.strftime('%Y')%>
      <% else %>
        <%= booking.start_date.strftime('%b %-d') %> - <%= booking.end_date.strftime('%b %-d') %>, <%= booking.end_date.strftime('%Y')%>
      <% end %>
    "></div>
  </div>
  <div class="copy-confirmation-wrapper">
    <div class="copy-confirmation d-flex align-items-center">
      <div class="check-icon-wrapper">
        <i class="material-icons small-check-icon">check</i>
      </div>
      <div>Copied to clipboard</div>
    </div>
  </div>
</div>
<div class="d-none"id="<%= dom_id booking %>">
  <p>
    <strong>User:</strong>
    <%= booking.user_id %>
  </p>

  <p>
    <strong>Listing:</strong>
    <%= booking.listing_id %>
  </p>

  <p>
    <strong>Start date:</strong>
    <%= booking.start_date %>
  </p>

  <p>
    <strong>End date:</strong>
    <%= booking.end_date %>
  </p>

  <p>
    <strong>Cancellation time:</strong>
    <%= booking.cancellation_time %>
  </p>

</div>
